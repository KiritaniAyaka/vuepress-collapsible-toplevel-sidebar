{
	"compilerOptions": {
		"declaration": true,
		"target": "ES2021",
		"module": "NodeNext",
		"rootDir": "./src",
		"moduleResolution": "NodeNext",
		"outDir": "./lib",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": false,
		"skipLibCheck": true
	},
	"include": [
		"./src"
	],
	"exclude": [
		"./lib"
	]
}